/* pages/order/pay/pay.wxss */
.container{
  background: #fff;
}
.address {
  width: 90%;
  border-top: 10rpx solid #f5f5f5;
  border-bottom: 10rpx solid #f5f5f5;
  background-color: #fff;
  padding: 0 5%;
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.address .left {
  float: left;
}

.address .right {
  float: right;
}

.product-list {
  background-color: #fff;
}

.product-list .product-items {
  width: 100%;
  height: 250rpx;
  border-bottom: 1rpx solid #ccc;
}

.product-items .pro-img {
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin: 25rpx 0 0 25rpx;
}

.product-items text {
  font-size: 30rpx;
  float: left;
  margin: 30rpx 30rpx 0;
}

.product-items .item-title {
  width: 460rpx;
}

.product-items .price {
  color: #f45;
}
.product-items .num {
  color: #ccc;
  margin-left: -15rpx;
}
.product-items .pay
{
  /* position: absolute;
  top:230rpx;
  right: 10rpx; */
  width: 460rpx;
  text-align: right;
}
.payGrey
{
  color:#ccc;
  background-color: #f6f6f6;
  position:fixed;
  width: 100%;
  bottom: 0;
  text-align: center;
  padding: 20rpx 0;
}
.payActive
{
  color:#fff;
  background-color: #f45;
  position:fixed;
  width: 100%;
  bottom: 0;
  text-align: center;
  padding: 20rpx 0;
}