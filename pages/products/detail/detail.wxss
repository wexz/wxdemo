/* pages/products/detail/detail.wxss */
swiper
{
  width: 100%;
  height: 750rpx;
}
swiper-item image
{
  width: 100%;
  height: 750rpx;
}
.pro-baseInfo
{
  width: 90%;
  padding: 30rpx 5% 50rpx;
  background-color: #fff;
}
.pro-baseInfo .pro-title
{
  font-size: 34rpx;
  line-height: 36rpx;
  margin: 20rpx 0;
  display: block;
  width: 100%;
}
.pro-baseInfo .pro-price
{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #FF4500;
}
.pro-baseInfo .pro-priceold
{
  margin-left: 10rpx;
  color: #ccc;
  text-decoration: line-through;
  font-size: 32rpx;
  line-height: 32rpx;
}
/*商品参数*/
.pro-tags{
  width: 90%;
  background: #fff;
