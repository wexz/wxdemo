/* pages/products/detail/detail.wxss */
swiper
{
  width: 100%;
  height: 750rpx;
}
swiper-item image
{
  width: 100%;
  height: 750rpx;
}
.pro-baseInfo
{
  width: 90%;
  padding: 30rpx 5% 50rpx;
  background-color: #fff;
}
.pro-baseInfo .pro-title
{
  font-size: 34rpx;
  line-height: 36rpx;
  margin: 20rpx 0;
  display: block;
  width: 100%;
}
.pro-baseInfo .pro-price
{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #FF4500;
}
.pro-baseInfo .pro-priceold
{
  margin-left: 10rpx;
  color: #ccc;
  text-decoration: line-through;
  font-size: 32rpx;
  line-height: 32rpx;
}
/*商品参数*/
.pro-tags{
  width: 90%;
  background: #fff;
  padding:40rpx 5% 5rpx;
  margin:15rpx auto;
}
.pro-detail-title{
  padding-left:15rpx;
  border-left:2px solid #000;
  font-size:30rpx;
  margin-bottom:30rpx;
}
.pro-detail-logo
{
  float: left;
  font-size: 28rpx;
  line-height: 28rpx;
  margin: 5rpx auto;
  clear: both;
}
.pro-detail-logo-name
{
  float: right;
  line-height: 28rpx;
  font-size: 28rpx;
  margin: 5rpx auto;
}
.pro_detaillist
{
  float: left;
  font-size: 28rpx;
  line-height: 50rpx;
  clear: both;
  padding-top: 10rpx;
  margin-top:25rpx;
  border-top: 1px solid #f5f5f5;
  
}
.pro_detaillist .arrow
{
  float: right;
  margin-left: 500rpx;
}
.pro-detail
{
  width: 100%;
  padding: 10rpx 5% 20rpx;
  background-color: #fff;
}
.pro-detail .pro-detail-title
{
  width: 90%;
  margin:20rpx auto 30rpx;
}
.pro-detail image
{
  width: 100%;
}
.bottomBar
{
  position: fixed;/*固定的*/
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;/* 弹性布局 */
  bottom: 0;
  font-size: 30rpx;
  line-height: 120rpx;
}
.online{
  width: 15%;
  border: 1rpx solid #f5f5f5;
}
.online image{
  width: 50rpx;
  height: 50rpx;
  margin:0 -25rpx;
  display: block;
}
.online button{
  width: 50rpx;
  height: 50rpx;
  margin: 35rpx auto;
  display: block;
  background: #fff;
}
.online button::after{
  border: none;
}
.cart{
  width: 15%;
  border: 1rpx solid #f5f5f5;
  position: relative;
}
.cart image
{
  width:50rpx;
  height: 50rpx;
  margin: 35rpx  auto;
  display: block;
}
.cart .cartNum
{
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:20rpx;
  right: 15rpx;
  background-color: #FF0000;
  border-radius: 50%;
  text-align: center;
  line-height:30rpx;
  font-size:22rpx;

}
.bottomBar .join
{
  border: 1px solid #f5f5f5;
  width: 35%;
  text-align: center;
}
.bottomBar .buy
{
  width: 35%;
  text-align: center;
  background-color: #FF4500;
  color: #fff;
}
.join-box
{
  width: 100%;
  height: 385rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 99;
}
.join-box image
{
  width: 130rpx;
  height: 130rpx;
  float: left;
  margin: 5%;
}
.join-box text{
  display: block;
  float: left;
  font-size: 28rpx;
  width:400rpx;
}
.join-box .join-title
{
  margin-top:5%; 
}
.join-box .join-price
{
  color: #FF8247;
  margin-top: 10rpx;
}
/* 库存 */
.pro-stock
{
  width: 90%;
  border-top: 1px solid #f5f5f5;
  clear: both;
  margin: 0 auto;
  padding:10rpx 0;
}
.pro-stock text{
  margin-top: 15rpx;
  width: 200rpx;
}
.grey
{
  margin-left: -140rpx;
  color: #808080;
}
/*加号和减号*/  
/*主容器*/  
.stepper {  
    width: 80px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:8rpx auto;
    float:right; 
}  
.stepper text
{
  width: 19px;
  line-height: 12px;
  text-align: center;
  float: left;
}
/*数值*/  
.stepper input {  
    width: 40px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  /*普通样式*/  
.stepper .normal{  
    color: black;  
}  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
.join-box .button
{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FF8247;
  color: #fff;
  position: absolute;
  bottom: 0;
  text-align: center;
  font-size: 34rpx;
}
.mask
{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: rgba(0,0,0,0.4);
}