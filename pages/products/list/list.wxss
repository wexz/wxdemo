/* pages/products/list/list.wxss */
.conditions
{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #F2F2F2;
  font-size: 28rpx;
  color: #ccc;
  display:flex;
  background: #f5f5f5;
}
.conditions view
{
  margin:0rpx 90rpx;
  text-align: center;
  height:75rpx;
  color: #ccc;
}
.conditions .active
{
  border-bottom: 6rpx solid #000;
  color: #000;
}
.pro-item
{
  width: 100%;
  float: left;
}
.product-list{
  background:#fff;
  width: 100%;
}
.pro-item
{
  float: left;
  width: 40%;
  padding: 20rpx 5% 40rpx;
  background: #fff;
}
.pro-item .pro-img
{
width: 280rpx;
height: 280rpx;
margin: 0 auto;
display: block;
}
.pro-item .item-title
{
  font-size: 28rpx;
  line-height: 28rpx;
  margin: 20rpx 0;
  display: block;
}
.pro-item .item-price
{
  color:#FF8247;
  font-size:28rpx;
}
.pro-item .item-priceold
{
  color:#ccc;
  font-size: 28rpx;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.end
{
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
  line-height: 28rpx;
}