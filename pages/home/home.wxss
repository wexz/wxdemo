.home-top
{
  width: 100%;
  height: 80rpx;
  background-color: #ff6700;
  position: relative;
  top:0;
  left: 0;
}
.searchbtn
{
  display: block;
  width:660rpx;
  border: 1px solid #ccc;
  text-align: center;
  margin: 0 auto;
  font-size: 24rpx;
  border-radius: 25rpx;
  background-color: #fff;
}
.slide-image
{
  height: 100%;
  width: 100%;
}
.searchimg
{
  display: block;
  height: 20rpx;
  width: 20rpx;
  position: absolute;
  top:0px;
  left: 60rpx;
}
.pro-list{
  width: 100%;
  background: #fff;
  border-bottom: 10rpx solid #f5f5f5;
}
.pro-cate
{
  width: 85%;
  height: 28rpx;
  margin: 50rpx auto 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 0 1% 10rpx 2.5%;
  border-left: 2px solid #000;
}
.pro-cate .arrow
{
  float: right;
}
.pro-list .pro-item
{
  float: left;
  width: 40%;
  padding: 20rpx 5% 40rpx;
}
.pro-item .pro-img
{
  width: 280rpx;
  height: 280rpx;
  margin: 0 auto;
  display: block;
}
.pro-item .item-title
{
  font-size: 28rpx;
  line-height: 36rpx;
  margin: 20rpx 0;
  display: block;
}
.pro-item .item-price
{
  font-size: 28rpx;
  color: #FF4500;
}
.pro-item .item-priceold
{
  margin-left: 10rpx;
  font-size: 28rpx;
  color:#ccc;
  text-decoration:line-through;
}
.pro-list .more
{
  font-size: 28rpx;
  margin-left: 600rpx;
}
.showall
{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 100rpx solid #f5f5f5;
  background: #fff;
  text-align: center;
}